@model EyeBoard.Models.BoardViewModel

<video id="presentation" class="card-img" muted></video>
<script>
    var presentationUrls = [];
    var currentPresentation = 0;

    var presentation = document.getElementById("presentation");
    presentation.addEventListener("ended", function () {
        if (currentPresentation < presentationUrls.length - 1) {
            ++currentPresentation;
        } else {
            currentPresentation = 0;
        }
        showPresentation();
    });
    presentation.addEventListener("loadedmetadata", function (e) {
        var originalVideoHeight = this.videoHeight;
        console.log(originalVideoHeight);

        var $video = $(presentation);
        var currentVideoHeight = $video.height();
        console.log(currentVideoHeight);
        var videoContainerHeight = $video.parent().parent().height();
        console.log(videoContainerHeight);
        var block_height = Math.round((videoContainerHeight) / 3);
        var currentScale = originalVideoHeight / currentVideoHeight;
        console.log(currentScale);
        var scaleY = (videoContainerHeight / originalVideoHeight) * currentScale;
        console.log(scaleY);

        $video.css('transform-origin', '50% 0%').css('transform', 'scale(' + scaleY + ')');

        $('#rightblock1').css('height', block_height + 'px');
        $('#rightblock2').css('height', block_height + 'px');
        $('#rightblock3').css('height', block_height + 1 + 'px');
    }, false);

    function showPresentation() {
        $("#presentation").empty();
        var source = $("<source />").attr("src", presentationUrls[currentPresentation]).attr("type", "video/mp4");
        $("#presentation").append(source);
        presentation.load();
        presentation.play();
    }

    // Get the presentations to show
    function refreshPresentations() {
        $.get("/api/presentation/" + "@Model.Group.Id", function (data) {
            presentationUrls = [];
            currentPresentation = 0;
            $.each(data, function (key, value) {
                presentationUrls.push(value.Url);
            });
            showPresentation();
        });
    }

    $(function () {
        // Presentation Handling

        // Start
        refreshPresentations();
    });
</script>

