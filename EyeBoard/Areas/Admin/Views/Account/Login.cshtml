@model EyeBoard.Areas.Admin.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@Html.ValidationSummary()
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin text-center" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("returnUrl", Request.Params["ReturnUrl"])

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    @Html.LabelFor(m => m.Username, htmlAttributes: new { @class = "sr-only" })
    @Html.EditorFor(m => m.Username, new { htmlAttributes = new { @class = "form-control" } })
    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "sr-only" })
    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
    <button class="btn btn-lg btn-primary btn-block" type="submit">Inloggen</button>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}