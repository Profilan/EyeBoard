@model EyeBoard.Areas.Admin.Models.Identity.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@Html.ValidationSummary()
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin text-center" }))
{
    @Html.AntiForgeryToken()

    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    @Html.LabelFor(m => m.UserName, htmlAttributes: new { @class = "sr-only" })
    @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control" } })
    @Html.LabelFor(m => m.Password, htmlAttributes: new { @class = "sr-only" })
    @Html.EditorFor(m => m.Password, new { htmlAttributes = new { @class = "form-control" } })
    <div class="checkbox mb-3">
        <label>
            <input value="remember-me" type="checkbox"> Remember me
        </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
}